{
	"name": "flow-launcher-plugin-nightlight",
	"description": "Flow Launcher plugin nightlight",
	"main": "./dist/main.js",
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc",
		"nightlight": "npm run nightlight:package:exe &&  ./nightlight-cli.exe",
		"nightlight:package:exe": "npm run build && pkg -t node16-win .",
		"start": "node --loader ts-node/esm src/cli.ts"
	},
	"devDependencies": {
		"@types/node": "^22.5.4",
		"prettier": "^3.3.3",
		"@types/winreg": "^1.2.36",
		"pkg": "^5.8.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"winreg": "^1.2.5",
		"open": "^10.1.0",
		"winston": "^3.14.2",
		"zod": "^3.23.8"
	}
}
